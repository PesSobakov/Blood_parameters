@{
    ViewData["Title"] = "Table " + ViewBag.Title;
}
@model Blood_parameters.Models.PatientsParameterTable

@section Breadcrumbs {
    <div class="flex-left breadcrumb">
        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Головна</a>
        <span>></span>
        <a class="nav-link" asp-area="" asp-controller="Administrator" asp-action="Index">Адміністратор</a>
        <span>></span>
        <a class="nav-link" asp-area="" asp-controller="Administrator" asp-action="Index" asp-fragment="EditTables">Редагування таблиць БД</a>
        <span>></span>
        <a class="nav-link" asp-area="" asp-controller="Administrator" asp-action="PatientsParameters">Параметри Пацієнтів</a>
    </div>
}

    @section Styles {
    @Html.Raw(MyHtmlHelper.BootstrapTableStyles(this.Context))
    }

<div>
    <div>
        @if (ViewBag.Error != null)
        {
            <div>@ViewBag.Error</div>
        }
        @Html.ValidationSummary()

        <table class="width100">
            <tr>
                <td>
                    @using (Html.BeginForm("PatientsParametersAdd", "Administrator", FormMethod.Post))
                    {
                        <table>
                            <tr><td>ID пацієнта:</td><td>@Html.TextBoxFor(x => x.add.PatientId)</td></tr>
                            <tr><td>ID параметру:</td><td>@Html.TextBoxFor(x => x.add.ParameterId)</td></tr>
                            <tr><td>Значення:</td><td>@Html.TextBoxFor(x => x.add.Value)</td></tr>
                            <tr><td>Дата проведення аналізу:</td><td>@Html.TextBoxFor(x => x.add.DateOfCheck)</td></tr>
                        </table>
                        <input type="submit" value="Додати" />
                    }
                </td>
                <td>
                    @using (Html.BeginForm("PatientsParametersUpdate", "Administrator", FormMethod.Post))
                    {
                        <table>
                            <tr><td>Де ID:</td><td>@Html.TextBoxFor(x => x.update.Id)</td></tr>
                            <tr><td>ID пацієнта:</td><td>@Html.TextBoxFor(x => x.update.PatientId)</td></tr>
                            <tr><td>ID параметру:</td><td>@Html.TextBoxFor(x => x.update.ParameterId)</td></tr>
                            <tr><td>Значення:</td><td>@Html.TextBoxFor(x => x.update.Value)</td></tr>
                            <tr><td>Дата проведення аналізу:</td><td>@Html.TextBoxFor(x => x.update.DateOfCheck)</td></tr>
                        </table>
                        <input type="submit" value="Оновити" />
                    }
                </td>
            </tr>
            <tr><td><br /></td></tr>
            <tr>
                <td>
                    @using (Html.BeginForm("PatientsParametersDelete", "Administrator", FormMethod.Post))
                    {
                        <table>
                            <tr><td>Видалити запис:</td><td>@Html.TextBoxFor(x => x.id) </td></tr>
                        </table>
                        <input type="submit" value="Видалити запис" />
                    }
                </td>
                <td>
                    @using (Html.BeginForm("PatientsParametersFillUpdate", "Administrator", FormMethod.Post))
                    {
                        <table>
                            <tr><td>ID:</td><td>@Html.TextBoxFor(x => x.fillUpdate)</td></tr>
                        </table>
                        <input type="submit" value="Заповнити поля оновлення" />
                    }
                </td>
            </tr>
        </table>
    </div>

    @Html.Raw(MyHtmlHelper.BootstrapTableBody(ViewBag.Head,ViewBag.Table))
</div>


@section Scripts {
    @Html.Raw(MyHtmlHelper.BootstrapTableScripts(this.Context,ViewBag.Head))
}