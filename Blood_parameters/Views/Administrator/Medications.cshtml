@{
    ViewData["Title"] = "Table " + ViewBag.Title;
}
@model Blood_parameters.Models.MedicationsTable

@section Breadcrumbs {
    <div class="flex-left breadcrumb">
        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Головна</a>
        <span>></span>
        <a class="nav-link" asp-area="" asp-controller="Administrator" asp-action="Index">Адміністратор</a>
        <span>></span>
       <a class="nav-link" asp-area="" asp-controller="Administrator" asp-action="Index" asp-fragment="EditTables">Редагування таблиць БД</a>
         <span>></span>
        <a class="nav-link" asp-area="" asp-controller="Administrator" asp-action="Medications">Ліки</a>
    </div>
}

    @section Styles {
    @Html.Raw(MyHtmlHelper.BootstrapTableStyles(this.Context))
}

<div>
    <div>
        @if (ViewBag.Error != null)
        {
            <div>@ViewBag.Error</div>
        }
        @Html.ValidationSummary()

        <table class="width100">
            <tr>
                <td>
                    @using (Html.BeginForm("MedicationsAdd", "Administrator", FormMethod.Post))
                    {
                        <table>
                            <tr><td>Тривалість прийому:</td><td>@Html.TextBoxFor(x => x.add.ReceptionDuration)</td></tr>
                            <tr><td>ID пацієнта:</td><td>@Html.TextBoxFor(x => x.add.PatientId)</td></tr>
                            <tr><td>Назва лікарського засобу:</td><td>@Html.TextBoxFor(x => x.add.MedicationName)</td></tr>
                            <tr><td>Дозування:</td><td>@Html.TextBoxFor(x => x.add.MedicationDosage)</td></tr>
                            <tr><td>Частота прийому:</td><td>@Html.TextBoxFor(x => x.add.MedicationFrequency)</td></tr>
                            <tr><td>ID лікаря:</td><td>@Html.TextBoxFor(x => x.add.DoctorId)</td></tr>
                        </table>
                        <input type="submit" value="Додати" />
                    }
                </td>
                <td>
                    @using (Html.BeginForm("MedicationsUpdate", "Administrator", FormMethod.Post))
                    {
                        <table>
                            <tr><td>Де ID:</td><td>@Html.TextBoxFor(x => x.update.Id)</td></tr>
                            <tr><td>Тривалість прийому:</td><td>@Html.TextBoxFor(x => x.update.ReceptionDuration)</td></tr>
                            <tr><td>ID пацієнта:</td><td>@Html.TextBoxFor(x => x.update.PatientId)</td></tr>
                            <tr><td>Назва лікарського засобу:</td><td>@Html.TextBoxFor(x => x.update.MedicationName)</td></tr>
                            <tr><td>Дозування:</td><td>@Html.TextBoxFor(x => x.update.MedicationDosage)</td></tr>
                            <tr><td>Частота прийому:</td><td>@Html.TextBoxFor(x => x.update.MedicationFrequency)</td></tr>
                            <tr><td>ID лікаря:</td><td>@Html.TextBoxFor(x => x.update.DoctorId)</td></tr>
                        </table>
                        <input type="submit" value="Оновити" />
                    }
                </td>
            </tr>
            <tr><td><br /></td></tr>
            <tr>
                <td>
                    @using (Html.BeginForm("MedicationsDelete", "Administrator", FormMethod.Post))
                    {
                        <table>
                            <tr><td>Видалити запис:</td><td>@Html.TextBoxFor(x => x.id) </td></tr>
                        </table>
                        <input type="submit" value="Видалити запис" />
                    }
                </td>
                <td>
                    @using (Html.BeginForm("MedicationsFillUpdate", "Administrator", FormMethod.Post))
                    {
                        <table>
                            <tr><td>ID:</td><td>@Html.TextBoxFor(x => x.fillUpdate)</td></tr>
                        </table>
                        <input type="submit" value="Заповнити поля оновлення" />
                    }
                </td>
            </tr>
        </table>
    </div>

    @Html.Raw(MyHtmlHelper.BootstrapTableBody(ViewBag.Head,ViewBag.Table))
</div>


@section Scripts {
    @Html.Raw(MyHtmlHelper.BootstrapTableScripts(this.Context,ViewBag.Head))
}